<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Sacer</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>Charset filter</filter-name>
        <filter-class>it.eng.spagoCore.util.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Charset filter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>URI Encoding filter</filter-name>
        <filter-class>it.eng.spagoCore.util.UriEcondingFilter</filter-class>
        <init-param>
            <param-name>uriEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>URI Encoding filter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!-- SSO + JAX-RS CONFIGURATION -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>/saml/*</url-pattern>
        <url-pattern>/detail/*</url-pattern>
    </filter-mapping>
    <!-- UUID filter logging -->
    <filter>
        <filter-name>UUID Logger filter</filter-name>
        <filter-class>it.eng.spagoCore.util.UUIDLoggerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UUID Logger filter</filter-name>
        <url-pattern>/RecUniDocMultiMedia</url-pattern>
        <url-pattern>/RecPCUniDocMultiMedia</url-pattern>
        <url-pattern>/RecDIPUnitaDocumentariaSync</url-pattern>
        <url-pattern>/RecDIPEsibizioneSync</url-pattern>
        <url-pattern>/RecAIPUnitaDocumentariaSync</url-pattern>		
        <url-pattern>/RecDIPComponenteTrasformatoSync</url-pattern>	
        <url-pattern>/RecDIPRapportiVersSync</url-pattern>	
        <url-pattern>/InvioRichiestaAnnullamentoVersamenti</url-pattern>	
        <url-pattern>/RecDIPStatoConservazioneSync</url-pattern>	
        <url-pattern>/RecDIPProveConservSync</url-pattern>	
    </filter-mapping>
    <!-- 
        Per far convivere JAX-RS & la dispatcherServlet di Spring è necessario configurare questi listener.
        L'ordine è FONDAMENTALE.
        Vedi https://access.redhat.com/documentation/en-US/JBoss_Enterprise_Application_Platform/6.4/html/Development_Guide/sect-RESTEasySpring_Integration.html .
    -->
    <listener>
        <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
    </listener>
    <listener>
        <listener-class>org.jboss.resteasy.plugins.spring.SpringContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Resteasy</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Resteasy</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <!-- Fondamentale altrimenti il percorso sacer/rest viene ignorato!!! -->
    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/rest</param-value>
    </context-param>
    <!-- SSO + JAX-RS CONFIGURATION FINE -->
    <listener>
        <listener-class>it.eng.parer.web.util.SerieSessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>it.eng.parer.web.util.AuditSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>it.eng.spagoCore.configuration.ConfigServlet</servlet-class>
        <init-param>
            <param-name>AF_CONFIG_FILE</param-name>
            <param-value>/WEB-INF/conf/spago/master.xml</param-value>
        </init-param>
        <!-- CONFIGURAZIONE LOGO SULLA CORNICE DELLE PAGINE -->
        <!-- logo in alto a destra -->
        <init-param>
            <param-name>logo1_relativePath</param-name>
            <param-value>/img/regione/LogoParer.png</param-value>
        </init-param>
        <init-param>
            <param-name>logo1_url</param-name>
            <param-value>https://poloarchivistico.regione.emilia-romagna.it</param-value>
        </init-param>
        <init-param>
            <param-name>logo1_title</param-name>
            <param-value>ParER - Polo Archivistico Regionale dell'Emilia-Romagna</param-value>
        </init-param>
        <init-param>
            <param-name>logo1_alt</param-name>
            <param-value>Logo ParER</param-value>
        </init-param>
        <!-- logo in basso a sinistra -->
        <init-param>
            <param-name>logo2_relativePath</param-name>
            <param-value>/img/regione/LogoER.png</param-value>
        </init-param>
        <init-param>
            <param-name>logo2_url</param-name>
            <param-value>http://www.regione.emilia-romagna.it</param-value>
        </init-param>
        <init-param>
            <param-name>logo2_title</param-name>
            <param-value>Regione Emilia-Romagna</param-value>
        </init-param>
        <init-param>
            <param-name>logo2_alt</param-name>
            <param-value>Regione Emilia-Romagna</param-value>
        </init-param>
        <!-- CONFIGURAZIONE LOGO SULLA CORNICE DELLE PAGINE FINE -->
        <init-param>
            <param-name>titolo_applicativo</param-name>
            <param-value>SACER</param-value>
        </init-param>
        <init-param>
            <param-name>enableHelpOnline</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>debugAuthorization</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SpringServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpringServlet</servlet-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>/VerificaFirme</url-pattern>
        <url-pattern>/detail/*</url-pattern>
    </servlet-mapping>
    <!-- WS RESTful implementati tramite servlet -->
    <servlet>
        <servlet-name>RecMultiMUniDocSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecMultiMUniDocSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecMultiMUniDocSrvlt</servlet-name>
        <url-pattern>/RecUniDocMultiMedia</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecMultiMPCUniDocSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecMultiMProveConservSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecMultiMPCUniDocSrvlt</servlet-name>
        <url-pattern>/RecPCUniDocMultiMedia</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecStatoConservSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecStatoConservSrvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecUnitaDocumentariaSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecUnitaDocumentariaSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecUnitaDocumentariaSrvlt</servlet-name>
        <url-pattern>/RecDIPUnitaDocumentariaSync</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecDIPEsibizioneSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecDIPEsibizioneSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecDIPEsibizioneSrvlt</servlet-name>
        <url-pattern>/RecDIPEsibizioneSync</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecAIPUnitaDocumentariaSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecAIPUnitaDocumentariaSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecAIPUnitaDocumentariaSrvlt</servlet-name>
        <url-pattern>/RecAIPUnitaDocumentariaSync</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecProveConservSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecProveConservSrvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecDIPComponenteTrasformatoSync</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecUDConvert2PdfSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecDIPComponenteTrasformatoSync</servlet-name>
        <url-pattern>/RecDIPComponenteTrasformatoSync</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecRapportiVersSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.RecRapportiVersSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecRapportiVersSrvlt</servlet-name>
        <url-pattern>/RecDIPRapportiVersSync</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StatusMonitorSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.StatusMonitorSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusMonitorSrvlt</servlet-name>
        <url-pattern>/StatusMonitor</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TestMarcatura</servlet-name>
        <servlet-class>it.eng.parer.crypto.test.TestMarcatura</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestMarcatura</servlet-name>
        <url-pattern>/TestMarcatura</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GestioneCRL</servlet-name>
        <servlet-class>it.eng.parer.crypto.test.GestioneCRL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestioneCRL</servlet-name>
        <url-pattern>/GestioneCRL</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InvioRichiestaAnnullamentoVersamentiSrvlt</servlet-name>
        <servlet-class>it.eng.parer.restWS.InvioRichiestaAnnullamentoVersamentiSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InvioRichiestaAnnullamentoVersamentiSrvlt</servlet-name>
        <url-pattern>/InvioRichiestaAnnullamentoVersamenti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecStatoConservSrvlt</servlet-name>
        <url-pattern>/RecDIPStatoConservazioneSync</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecProveConservSrvlt</servlet-name>
        <url-pattern>/RecDIPProveConservSync</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JSP webapp</web-resource-name>
            <url-pattern>/jsp/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    <error-page>
        <error-code>401</error-code>
        <location>/jsp/login/notAuthorized.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/notAuthorizedError.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/genericError.jsp</location>
    </error-page>
</web-app>
