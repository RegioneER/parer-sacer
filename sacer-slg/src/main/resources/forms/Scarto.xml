<?xml version="1.0" encoding="UTF-8"?>
<Form Description="Scarto" xmlns="http://www.spagoLite.eng.it/xmlbean/form" xmlns:xsi="http://www.w3.org/2001/XMLSchema"
      xsi:noNamespaceSchemaLocation="Form.xsd" >

    <!-- CREAZIONE RICHIESTE SCARTO -->
    <Fields Name="CreazioneRichScartoVers" Description="Creazione richiesta di scarto versamenti">
        <Input Name="cd_rich_scarto_vers" Description="Richiesta" Type="STRING" Required="true" MaxLength="100"/>
        <Input Name="ds_rich_scarto_vers" Description="Descrizione" Type="STRING" Required="true" MaxLength="254"/>
        <TextArea Name="nt_rich_scarto_vers" Description="Motivazione" Type="STRING" Required="true" Rows="20" Cols="100" MaxLength="2000"/>
        <Input Name="bl_file" Description="File con cui creare la richiesta" Type="FILE" Required="true"/>
        <Button Name="creaRichScartoVers" Description="Crea richiesta scarto versamenti" Type="STRING"/>
    </Fields>
    
    <!-- RICERCA RICHIESTE SCARTO-->
    <Section Name="udSection" Description="" Legend="Sezione unità documentaria" ShowButton="false" LoadOpened="true"/>        
    <Section Name="listaRichiesteSection" Description="" Legend="Lista richieste di scarto versamenti" ShowButton="false" LoadOpened="true"/>
    
    <Fields Name="FiltriRicercaRichScartoVers" Description="Gestione richieste scarto versamenti">
        <ComboBox Name="id_ambiente" Description="Ambiente" Type="INTEGER" Trigger="true" Required="true"/>
        <ComboBox Name="id_ente" Description="Ente" Type="INTEGER" Trigger="true"/>
        <ComboBox Name="id_strut" Description="Struttura" Type="INTEGER" Trigger="true"/>
        
        <Input Name="cd_rich_scarto_vers" Description="Richiesta" Type="STRING"/>
        <Input Name="ds_rich_scarto_vers" Description="Descrizione" Type="STRING"/>
        <Input Name="nt_rich_scarto_vers" Description="Motivazione" Type="STRING"/>
        <MultiSelect Name="ti_stato_rich_scarto_vers_cor" Description="Stato corrente" Type="STRING"/>
        <Input Name="dt_creazione_rich_scarto_vers_da" Description="Data creazione da" Type="DATE"/>
        <Input Name="dt_creazione_rich_scarto_vers_a" Description="Data creazione a" Type="DATE"/>
        <ComboBox Name="fl_non_scartabile" Description="Scarti non fattibili" Type="STRING"/>
        <ComboBox Name="cd_registro_key_unita_doc" Description="Registro" Type="STRING"/>
        <Input Name="aa_key_unita_doc" Description="Anno" Type="INTEGER" MaxLength="4"/>
        <Input Name="cd_key_unita_doc" Description="Numero" Type="STRING"/>
        
        <Button Name="ricercaRichScartoVers" Description="Ricerca richieste" Type="STRING"/>
        <Button Name="creaRichScartoImmediata" Description="Crea richiesta di scarto" Type="STRING"/>
    </Fields>
    
    <List Name="RichScartoVersList" Description="Richieste scarto versamenti">
        <Input Name="amb_ente_strut" Description="Ambiente - Ente - Struttura" Type="STRING" />
        <Input Name="cd_rich_scarto_vers" Description="Richiesta" Type="STRING"/>
        <Input Name="ds_rich_scarto_vers" Description="Descrizione" Type="STRING"/>
        <Input Name="ti_stato_rich_scarto_vers_cor" Description="Stato corrente" Type="STRING"/>
        <Input Name="dt_creazione_rich_scarto_vers" Description="Data creazione" Type="DATE"/>
        <Input Name="ni_item" Description="Numero scarti" Type="INTEGER" GroupingDecimal="true"/>
        <Input Name="ni_item_non_scartati" Description="Numero scarti non fattibili" Type="INTEGER" GroupingDecimal="true"/>
    </List>
    
    <!-- DETTAGLIO RICHIESTE -->
    <Section Name="infoSection" Description="" Legend="Informazioni principali" ShowButton="false" LoadOpened="true"/>
    <Section Name="statoCorrenteSection" Description="" Legend="Stato corrente" ShowButton="false" LoadOpened="true"/>
    <Section Name="statoSection" Description="" Legend="Stato" ShowButton="false" LoadOpened="true"/>
    
    <Tab Name="RichScartoVersDetailSubTabs" Description="">
        <TabElement Name="ListaItem" Description="Lista versamenti da scartare" />            
        <TabElement Name="ListaStati" Description="Lista stati" />    
        <TabElement Name="ListaItemCancellati" Description="Lista versamenti cancellati" />    
    </Tab>
    
    <Fields Name="RichScartoVersDetail" Description="Dettaglio richiesta di scarto versamenti">
        <Input Name="id_rich_scarto_vers" Description="Id richiesta" Type="INTEGER" Hidden="true"/>
        <Input Name="id_strut" Description="Id struttura" Type="INTEGER" Hidden="true"/>
        <!-- Info principali -->
        <Input Name="nm_ambiente" Description="Ambiente" Type="STRING" />
        <Input Name="nm_ente" Description="Ente" Type="STRING" />
        <Input Name="nm_strut" Description="Struttura" Type="STRING" />
        <Input Name="ti_rich_scarto_vers" Description="Tipo richiesta" Type="STRING" />
        <Input Name="cd_rich_scarto_vers" Description="Richiesta" Type="STRING" MaxLength="100" Required="true"/>
        <Input Name="ds_rich_scarto_vers" Description="Descrizione" Type="STRING" MaxLength="254" Required="true"/>
        <TextArea Name="nt_rich_scarto_vers" Description="Motivazione" Type="STRING" Rows="20" Cols="100" MaxLength="2000" Required="true"/>
        <Input Name="dt_creazione_rich_scarto_vers" Description="Data creazione" Type="DATE" />
        <Input Name="ni_item" Description="Numero scarti" Type="INTEGER" GroupingDecimal="true" />
        <Input Name="ni_item_non_scartati" Description="Numero scarti non fattibili" Type="INTEGER" GroupingDecimal="true" />
        <Input Name="ti_creazione_rich_annul_vers" Description="Modalità creazione richiesta" Type="STRING" />
        <!-- Stato corrente -->
        <Input Name="ti_stato_rich_scarto_vers" Description="Stato corrente" Type="STRING" />
        <Input Name="dt_reg_stato_rich_scarto_vers" Description="Data" Type="DATETIME" />
        <Input Name="ds_nota_rich_scarto_vers" Description="Note" Type="STRING" />
        <Input Name="nm_userid_stato" Description="Utente" Type="STRING" />
        <Input Name="bl_file" Description="File con cui creare la richiesta" Type="FILE" />
    </Fields>
    
    <List Name="ItemList" Description="" hideUpdateButton="true">
        <Input Name="pg_item_rich_scarto_vers" Description="Progressivo" Type="INTEGER" />
        <Input Name="ds_key_item" Description="Chiave" Type="STRING" />
        <Input Name="dt_creazione" Description="Data versamento" Type="DATE" />
        <Input Name="ti_stato_item_scarto" Description="Stato" Type="STRING" />
        <Input Name="ds_lista_err" Description="Lista errori" Type="STRING" />
    </List>
    
    <List Name="StatiList" Description="" hideDeleteButton="true" hideInsertButton="true">
        <Input Name="id_stato_rich_scarto_vers" Description="Id stato richiesta" Type="INTEGER" Hidden="true"/>
        <Input Name="pg_stato_rich_scarto_vers" Description="Progressivo" Type="INTEGER" />
        <Input Name="ti_stato_rich_scarto_vers" Description="Stato" Type="STRING" />
        <Input Name="dt_reg_stato_rich_scarto_vers" Description="Data registrazione" Type="DATE" />
        <Input Name="ds_nota_rich_scarto_vers" Description="Note" Type="STRING" />
        <Input Name="nm_userid" Description="Utente" Type="STRING" />
    </List>
    
    <List Name="ItemCancellatiList" Description="" hideUpdateButton="true">
        <Input Name="pg_item_rich_scarto_vers_cancellati" Description="Progressivo" Type="INTEGER" />
        <Input Name="ds_key_item_cancellato" Description="Chiave" Type="STRING" />
        <Input Name="dt_versamento" Description="Data versamento" Type="DATE" />
    </List>
    
    <ButtonList Name="RichScartoVersDetailButtonList" Description="">
        <Button Name="chiudiRichiesta" Description="Chiudi" Type="STRING"/>
        <Button Name="uploadFile" Description="Carica file" Type="STRING"/>
    </ButtonList>
    
    <!-- CAMBIO STATO RICHIESTA -->
    <Section Name="cambioStatoSection" Description="" Legend="Stato da assumere" ShowButton="false" LoadOpened="true"/>
    <Fields Name="CambioStatoRichiesta" Description="Cambio stato">
        <Input Name="id_rich_scarto_vers" Description="Id richiesta" Type="INTEGER" Hidden="true"/>
        <Input Name="ti_stato_rich_scarto_vers" Description="Stato da assumere" Type="STRING" Required="true"/>
        <Input Name="ds_nota_rich_scarto_vers" Description="Note" Type="STRING" />
        <Button Name="confermaCambioStato" Description="Cambia stato" Type="STRING"/>
    </Fields>
    
    <!-- DETTAGLIO STATO RICHIESTA -->
    <Fields Name="StatoRichScartoVersDetail" Description="Dettaglio stato richiesta di scarto versamenti">
        <Input Name="id_rich_scarto_vers" Description="Id richiesta" Type="INTEGER" />
        <Input Name="id_stato_rich_scarto_vers" Description="Id stato richiesta" Type="INTEGER" />
        <Input Name="id_strut" Description="Id struttura" Type="INTEGER" />
        <!-- Info principali -->
        <Input Name="nm_ambiente" Description="Ambiente" Type="STRING" />
        <Input Name="nm_ente" Description="Ente" Type="STRING" />
        <Input Name="nm_strut" Description="Struttura" Type="STRING" />
        <Input Name="cd_rich_scarto_vers" Description="Richiesta" Type="STRING" />
        <Input Name="ds_rich_scarto_vers" Description="Descrizione" Type="STRING" />
        <Input Name="ti_stato_rich_scarto_vers_cor" Description="Stato corrente" Type="STRING" />
        
        <!-- Stato corrente -->
        <Input Name="pg_stato_rich_scarto_vers" Description="Progressivo" Type="INTEGER" />
        <Input Name="ti_stato_rich_scarto_vers" Description="Stato" Type="STRING" />
        <Input Name="dt_reg_stato_rich_scarto_vers" Description="Data registrazione" Type="DATE" />
        <Input Name="ds_nota_rich_scarto_vers" Description="Note" Type="STRING" />
        <Input Name="nm_userid_stato" Description="Utente" Type="STRING" />
    </Fields>
</Form>
